<view class="page">
  <view class="card" wx:for="{{list}}" wx:key="_id" bindtap="goDetail" data-id="{{item._id}}">
    <image src="{{item.cover}}" mode="aspectFill" style="width:100%;height:320rpx;border-radius:12rpx"/>
    <view style="margin-top:12rpx;font-weight:600;font-size:32rpx">{{item.title}}</view>
    <view style="color:#666;margin-top:6rpx">{{item.subtitle}}</view>
    <view style="display:flex;justify-content:space-between;align-items:center;margin-top:12rpx">
      <view class="price">￥{{item.priceYuan}}</view>
      <view class="btn">立即购买</view>
    </view>
  </view>
</view>
