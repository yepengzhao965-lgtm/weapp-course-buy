<view class="page">
  <view class="card">
    <view class="title">官方登录能力示例</view>
    <!-- C. 头像昵称授权登录 -->
    <button class="btn primary" bindtap="onProfileLogin">授权登录（头像昵称）</button>
    <!-- A. 手机号快速验证（系统弹窗） -->
    <button class="btn primary"
            open-type="getPhoneNumber"
            bindgetphonenumber="onPhoneLogin"
            id="phoneLoginBtn">
      手机号验证登录
    </button>

    <!-- B. 获取 UnionID（仅用于拿 encryptedData 解密） -->
    <button class="btn"
            open-type="getUserInfo"
            lang="zh_CN"
            bindgetuserinfo="onGetUserInfo">
      获取 UnionID（encryptedData 解密）
    </button>

    <button class="btn" bindtap="onCheck">检查缓存</button>
    <view class="log" selectable="true">{{log}}</view>
  </view>
</view>
