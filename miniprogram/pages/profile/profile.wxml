
<!-- pages/profile/profile.wxml -->
<view class="page">
  <view class="card">
    <block wx:if="{{!user}}">
      <view class="title">需要微信授权登录</view>
      <view class="desc">点击下方按钮完成授权并绑定账号</view>
      <button class="btn" bindtap="onAuthLoginTap" loading="{{busy}}" disabled="{{busy}}">
        微信一键授权登录
      </button>
    </block>
    <block wx:else>
      <view class="user">
        <image class="avatar" src="{{user.avatarUrl || '/images/avatar-default.png'}}" />
        <view class="name">{{user.nickName || '微信用户'}}</view>
      </view>
    </block>
  </view>
</view>
