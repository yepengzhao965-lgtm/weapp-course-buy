.container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  background: #eee;
}
.nickname {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #111;
}
.btn {
  background: #2563eb;
  color: #fff;
  padding: 18rpx 24rpx;
  border-radius: 12rpx;
}
.btn.secondary {
  background: #f3f4f6;
  color: #2563eb;
}
.input {
  border: 1px solid #e5e7eb;
  padding: 12rpx;
  border-radius: 8rpx;
  width: 100%;
}