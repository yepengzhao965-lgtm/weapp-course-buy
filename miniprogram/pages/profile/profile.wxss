.container{padding:24rpx;display:flex;flex-direction:column;align-items:center}
.avatar{width:160rpx;height:160rpx;border-radius:50%;margin-bottom:16rpx;background:#eee}
.nickname{font-size:32rpx;font-weight:600;margin-bottom:12rpx;color:#111}
.tip{font-size:24rpx;color:#666;margin-bottom:12rpx;text-align:center}
.btn{background:#2563eb;color:#fff;padding:18rpx 24rpx;border-radius:12rpx}
.btn.secondary{background:#334155}
.input{width:100%;border:1px solid #e5e7eb;border-radius:10rpx;padding:16rpx;margin-top:12rpx}