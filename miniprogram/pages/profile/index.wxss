
.profile-page{ padding:24rpx }
.card{ background:#fff;border-radius:24rpx;padding:40rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.06);text-align:center }
.title{ font-size:32rpx;font-weight:600;margin-bottom:10rpx }
.desc{ color:#666;margin-bottom:26rpx }
.btn{ background:#07c160;color:#fff;border:0;border-radius:12rpx }
.user-info{ display:flex;flex-direction:column;align-items:center }
.avatar{ width:160rpx;height:160rpx;border-radius:80rpx;margin-bottom:10rpx;background:#f5f5f5 }
.name{ font-size:30rpx;font-weight:600 }
