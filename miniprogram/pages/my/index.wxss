.my-page{ padding:24rpx }
.header{ background:#fff;border-radius:24rpx;padding:32rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.06);margin-bottom:24rpx }
.desc{ color:#666;margin-bottom:20rpx }
.btn{ background:#07c160;color:#fff;border:0;border-radius:12rpx }
.profile{ display:flex;align-items:center }
.avatar{ width:120rpx;height:120rpx;border-radius:60rpx;background:#f5f5f5 }
.name{ margin-left:20rpx;font-size:32rpx;font-weight:600 }
.purchased{ }
.empty{ color:#999;text-align:center;margin:120rpx 0 }
.item{ display:flex; background:#fff; border-radius:20rpx; padding:20rpx; margin-bottom:20rpx; box-shadow:0 8rpx 24rpx rgba(0,0,0,.06) }
.cover{ width:200rpx;height:140rpx;border-radius:12rpx;background:#f5f5f5 }
.meta{ flex:1; padding-left:20rpx; display:flex; flex-direction:column; justify-content:center }
.title{ font-size:30rpx; font-weight:600; margin-bottom:10rpx }
.sub{ color:#999 }
