
/* pages/my/index.wxss */
.my-page{ padding:24rpx }
.login-card{ position:relative; z-index:10; background:#fff; border-radius:20rpx; padding:28rpx; box-shadow:0 8rpx 24rpx rgba(0,0,0,.06); margin-bottom:16rpx }
.login-title{ font-size:30rpx; font-weight:600; margin-bottom:6rpx }
.login-desc{ color:#666; margin-bottom:16rpx }
.login-btn{ background:#07c160; color:#fff; border:0; border-radius:12rpx }
.profile-bar{ display:flex; align-items:center; gap:16rpx; background:#fff; border-radius:20rpx; padding:20rpx; box-shadow:0 8rpx 24rpx rgba(0,0,0,.06) }
.avatar{ width:96rpx; height:96rpx; border-radius:48rpx; background:#f5f5f5 }
.name{ font-size:28rpx; font-weight:600; flex:1 }
.phone{ color:#333 }
.mini{ border-radius:10rpx }
.content{ margin-top:16rpx }
