/**
 * 全局样式表
 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Microsoft YaHei", sans-serif;
}
.container {
  padding: 24rpx;
}
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
  padding: 24rpx;
}
.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}
.subtitle {
  font-size: 28rpx;
  color: #888888;
  margin-bottom: 24rpx;
}
button {
  margin-top: 24rpx;
}